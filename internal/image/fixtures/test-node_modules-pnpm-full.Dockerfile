ARG MANAGER_VERSION="8.15.4"

FROM node:20-alpine@sha256:c0a3badbd8a0a760de903e00cedbca94588e609299820557e72cba2a53dbaa2c

WORKDIR /usr/app

# initialize the package.json using the manager
RUN npx "pnpm@$MANAGER_VERSION" init

RUN npx "pnpm@$MANAGER_VERSION" add mkdirp@0.5.0
RUN npx "pnpm@$MANAGER_VERSION" add -d cryo@0.0.6

# ensure that we finish fully installed
RUN npx "pnpm@$MANAGER_VERSION" install
